<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seperatorcolor"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:background="@color/farmerprofilecardpanel1color"
      android:orientation="horizontal">
      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/seperatorcolor"/>


      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="10dp">

          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/profileImagedatagrid"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:src="@drawable/cow" />
      </LinearLayout>



      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/seperatorcolor"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="id"
          android:id="@+id/cattleId"
          android:textSize="20dp"
          android:background="@color/farmerprofilecardpanel1color"
          android:textAlignment="center"
          android:layout_weight="1"/>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/seperatorcolor"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="farmer id"
          android:id="@+id/farmerId"
          android:textSize="20dp"
          android:background="@color/farmerprofilecardpanel1color"
          android:textAlignment="center"
          android:layout_weight="1"/>
      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/seperatorcolor"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="cattle name"
          android:id="@+id/cattlename"
          android:background="@color/farmerprofilecardpanel1color"
          android:textAlignment="center"
          android:textSize="20dp"
          android:layout_weight="1"/>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/seperatorcolor"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="farm id"
          android:id="@+id/farmid"
          android:background="@color/farmerprofilecardpanel1color"
          android:textSize="20dp"
          android:textAlignment="center"
          android:layout_weight="1"/>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/seperatorcolor"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="farm name"
          android:textSize="20dp"
          android:id="@+id/farmName"
          android:background="@color/farmerprofilecardpanel1color"
          android:textAlignment="center"
          android:layout_weight="1"/>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/seperatorcolor"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:gravity="center_horizontal"
          android:background="@color/farmerprofilecardpanel1color"
          android:layout_weight="1"
          android:orientation="horizontal">
          <com.google.android.material.button.MaterialButton
              android:layout_width="500dp"
              android:layout_height="wrap_content"
              android:id="@+id/btneditcattle"
              android:text="Edit"
              android:layout_weight="1"
              android:drawableEnd="@drawable/baseline_edit_24_white"
              android:drawableTint="@color/textcolor"
              android:textColor="@color/btncolortext"
              android:backgroundTint="@color/lightblue" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/seperatorcolor"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:gravity="center_horizontal"
          android:background="@color/farmerprofilecardpanel1color"
          android:layout_weight="1"
          android:orientation="horizontal">
          <com.google.android.material.button.MaterialButton
              android:layout_width="500dp"
              android:layout_height="wrap_content"
              android:id="@+id/btneditmilkcycle"
              android:text="Milk Cycle"
              android:layout_weight="1"
              android:drawableTint="@color/textcolor"
              android:textColor="@color/btncolortext"
              android:backgroundTint="@color/lightblue" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/seperatorcolor"/>


  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seperatorcolor"/>

</LinearLayout>





